<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="nla.local"/>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <!-- <property name="url" value="jdbc:oracle:thin:@//172.31.11.190:1521/DEV.MINSK.NCA"/>
             <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
             <property name="username" value="NKA_NET3_DEV"/>
             <property name="password" value="123123"/> -->
        <property name="url" value="jdbc:oracle:thin:@nca-vm-db:1521/win.minsk.nca"/>
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="username" value="NKA_NET3_DEV"/>
        <property name="password" value="123123"/>
        <property name="initialSize" value="5"/>
        <property name="maxActive" value="10"/>
    </bean>


    <!--bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean"-->

    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">

        <property name="dataSource" ref="dataSource"/>
        <property name= "packagesToScan">
            <list>
                <value>nla.local.pojos</value>
                <value>nla.local.pojos.dict</value>
            </list>
        </property>



        <property name="hibernateProperties">
            <props>
                <!--prop key="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</prop>
                <prop key="hibernate.connection.url" >jdbc:oracle:thin:@nca-vm-db:1521/win.minsk.nca</prop>
                <prop key="cache.use_second_level_cache">false</prop-->

                <prop key="default_schema">SERGEI</prop>
                <prop key="hibernate.show_sql">true</prop>

                <prop key="debug">true</prop>
                <prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
                <prop key="hibernate.hbm2ddl.auto">validate</prop>
            </props>
        </property>

    </bean>

</beans>